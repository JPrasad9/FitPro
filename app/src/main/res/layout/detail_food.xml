<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recipe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40090808"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/food1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Egg:"
                android:textColor="#FCFDFD"
                android:textSize="45sp"
                app:fontFamily="@font/arizonia" />

            <TextView
                android:layout_marginVertical="10dp"
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calorie count:"
                android:textColor="#F6F8F8"
                android:textSize="20sp"
                app:fontFamily="@font/baloo" />

            <TextView
                android:id="@+id/food2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#F6F8F8"
                android:textSize="15sp" />

            <TextView
                android:layout_marginVertical="10dp"
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Right time to take:"
                android:textColor="#F6F8F8"
                android:textSize="20sp"
                app:fontFamily="@font/baloo" />

            <TextView
                android:id="@+id/food3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:textColor="#F6F8F8"
                android:textSize="15sp" />

            <TextView
                android:layout_marginVertical="10dp"
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Worst time to take:"
                android:textColor="#F6F8F8"
                android:textSize="20sp"
                app:fontFamily="@font/baloo" />

            <TextView
                android:id="@+id/food4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:textColor="#F6F8F8"
                android:textSize="15sp" />

            <TextView
                android:layout_marginVertical="10dp"
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best way to consume it:"
                android:textColor="#F6F8F8"
                android:textSize="20sp"
                app:fontFamily="@font/baloo" />

            <TextView
                android:id="@+id/food5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:textColor="#F6F8F8"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>